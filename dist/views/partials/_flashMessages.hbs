<link rel="stylesheet" href="/css/flashMessages.css">

<div id="flash-container">

    {{#each successMessage}}
        {{!-- <p class="flash-message success-message">{{this}}</p> --}}
        <dialog class="flash-message success-message" data-dialog-name="flash-successMessage" open>
            <div class="flash-message-text-wrapper">
                <p class="flash-message-text">{{this}}</p>
            </div>
            <div class="flash-message-button-wrapper">
                <a href="#" role="button" class="flash-message-button" data-dialog-close="flash-successMessage" onclick="closeDialog(this)">
                    <span class="material-icons">check</span>
                </a>
            </div>
        </dialog>
    {{/each}}

    {{#each errorMessage}}
        <dialog class="flash-message error-message" data-dialog-name="flash-errorMessage" open>
            <div class="flash-message-text-wrapper">
                <p class="flash-message-text">{{this}}</p>
            </div>
            <div class="flash-message-button-wrapper">
                <a href="#" role="button" class="flash-message-button" data-dialog-close="flash-errorMessage" onclick="closeDialog(this)">
                    <span class="material-icons">close</span>
                </a>
            </div>
        </dialog>
    {{/each}}

    {{#each infoMessage}}
        <dialog class="flash-message info-message" data-dialog-name="flash-infosuccessMessage" open>
            <div class="flash-message-text-wrapper">
                <p class="flash-message-text">{{this}}</p>
            </div>
            <div class="flash-message-button-wrapper">
                <a href="#" role="button" class="flash-message-button" data-dialog-close="flash-infoMessage" onclick="closeDialog(this)">
                    <span class="material-icons">check</span>
                </a>
            </div>
        </dialog>
    {{/each}}

    {{#each warnMessage}}
        <dialog class="flash-message warn-message" data-dialog-name="flash-warnMessage" open>
            <div class="flash-message-text-wrapper">
                <p class="flash-message-text">{{this}}</p>
            </div>
            <div class="flash-message-button-wrapper">
                <a href="#" role="button" class="flash-message-button" data-dialog-close="flash-warnMessage" onclick="closeDialog(this)">
                    <span class="material-icons">close</span>
                </a>
            </div>
        </dialog>
    {{/each}}

    {{#each errors}}
        <dialog class="flash-message {{this.type}}" data-dialog-name="flash-error-{{this.errorID}}" open>
            <div class="flash-message-text-wrapper">
                <p class="flash-message-text">{{this.text}}</p>
            </div>
            <div class="flash-message-button-wrapper">
                <a href="#" role="button" class="flash-message-button" data-dialog-close="flash-error-{{this.errorID}}" onclick="closeDialog(this)">
                    <span class="material-icons">close</span>
                </a>
            </div>
        </dialog>
    {{/each}}
